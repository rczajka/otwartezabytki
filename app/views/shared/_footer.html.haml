- cache [I18n.locale, 'footer'] do
  -#- unless Rails.env.development?
  .facebook-share.col-lg-5.col-md-5
    :plain
      <iframe src="//www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2Fotwartezabytki&amp;width=270&amp;height=62&amp;colorscheme=light&amp;show_faces=false&amp;border_color&amp;stream=false&amp;header=false" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:270px; height:62px;" allowTransparency="true"></iframe>
  .col-lg-7.col-md-7= t('layouts.application.footer.about_project')

  .partners.col-sm-12.col-xs-12
    .partner-big.col-md-5.col-sm-6.col-xs-12
      %h6.text-uppercase= t('layouts.application.footer.partner_h1')
      .partner-bg
        .partner-slider-1
          = link_to image_tag( 'partner-nid.png', :alt => 'Narodowy Instytut Dziedzictwa'), 'http://www.nid.pl/idm,160,rejestr-zabytkow.html'
          = link_to image_tag( 'partner-dws.png', :alt => 'Dojrz@łość w sieci'), 'http://dojrzaloscwsieci.pl/'
    .partner-small.col-md-2.col-sm-4.col-xs-12
      %h6.text-uppercase= t('layouts.application.footer.partner_h2')
      .partner-bg
        .partner-slider-2
          = link_to image_tag( 'partner-histmag.png', :alt => 'Histmag'), 'http://www.histmag.pl'
          = link_to image_tag( 'partner-szkolazklasa.png', :alt => 'Szkoła z klasą 2.0'), 'http://www.ceo.org.pl/pl/szkolazklasa2zero'
          = link_to image_tag( 'partner-poland-us.png', :alt => 'Amerykański Portal Polaków'), 'http://www.poland.us/'
    .partner-small.col-md-2.col-sm-4.col-xs-12
      %h6.text-uppercase= t('layouts.application.footer.partner_h3')
      .partner-bg
        .partner-slider-3
          = link_to image_tag( 'partner-tit.png', :alt => 'Towarzystwo Inicjatyw Twórczych'), 'http://www.e.org.pl'
          = link_to image_tag( 'partner-frsi.png', :alt => 'Fundacja Rowzoju Społeczeństwa Informacyjnego'), 'http://www.frsi.org.pl/'
          = link_to image_tag( 'partner-pttk.png', :alt => 'PTTK'), 'http://om.pttk.pl/'
          = link_to image_tag( 'partner-karta.png', :alt => 'Ośrodek Karta'), 'http://www.karta.org.pl/'
          = link_to image_tag( 'partner-ppolska.png', :alt => 'Projekt Polska'), 'http://projektpolska.pl/'
          = link_to image_tag( 'partner-orange.png', :alt => 'Fundacja Orange'), 'http://www.orange.pl/_fundacja_orange.phtml'
          = link_to image_tag( 'partner-myvimu.png', :alt => 'MyViMu.com - Moje Wirtualne Muzeum'), 'http://myvimu.com/'
          = link_to image_tag( 'partner-ceo.png', :alt => 'Centrum Edukacji Obywatelskiej'), 'http://www.ceo.org.pl/'
          = link_to image_tag( 'partner-historia.png', :alt => 'HISTORIA.org.pl'), 'http://www.historia.org.pl/'
          = link_to image_tag( 'partner-pttk2.png', :alt => 'Polskie Towarzystwo Turystyczno-Krajoznawcze'), 'http://www.pttk.pl/'
          = link_to image_tag( 'partner-zamki-gotyckie.png', :alt => 'Zamki Gotyckie'), 'http://zamki-gotyckie.pl/'
    .partner-small.last.col-md-2.col-sm-4.col-xs-12
      %h6.text-uppercase= t('layouts.application.footer.partner_h4')
      .partner-bg
        .partner-slider-4
          = link_to image_tag( 'partner-mhp.png', :alt => 'Muzeum Historii Polski'), 'http://www.muzhp.pl'
          = link_to image_tag( 'partner-pj.png', :alt => 'Patriotyzm Jutra'), 'http://www.muzhp.pl/konkursy/patriotyzm-jutra.html'
          = link_to image_tag( 'partner-msz.png', :alt => 'Ministerstwo Spraw Zagranicznych'), 'http://www.msz.gov.pl'
          = link_to image_tag( 'partner-cee.png', :alt => 'CEE TRUST - Trust for Civil Society in Central and Eastern Europe'), 'http://www.ceetrust.org'
          = link_to image_tag( 'partner-mpips.png', :alt => 'Ministerstwo Pracy i Polityki Społecznej'), 'http://www.mpips.gov.pl/'
          = link_to image_tag( 'partner-fwpn.jpeg', :alt => 'Fundacja Współpracy Polsko-Niemieckiej'), 'http://fwpn.org.pl/'
          = link_to image_tag( 'partner-mkidn.jpg', :alt => 'Ministerstwo Kultury i Dziedzictwa Narodowego'), 'http://www.mkidn.gov.pl/'

  .footer-bottom.col-sm-12.col-xs-12
    .footer-copyright.col-md-5.col-xs-12
      %p= t('layouts.application.footer.license')


    .footer-language.col-md-1.col-xs-12
      %select#lang.select2
        - enabled_locales.each do |l|
          %option{:rel => "#{url_for(:locale => l)}", :name => l, :selected => ('selected' if (params[:locale] || I18n.locale).to_s == l.to_s)}
            = t("common.lang.#{l}")

    .footer-links-container.col-md-3.col-md-offset-3.col-xs-12
      .footer-links
        - if @terms.present?
          = link_to t('users.terms_of_user.terms'), @terms, class: "footer-regulamin"
        - if @privacy.present?
          = link_to t('users.terms_of_user.privacy'), @privacy, class: "footer-prywatnosc"
      %a.footer-logo{:href => "http://www.monterail.com", :title => "Aplikacje internetowe w Ruby on Rails"} Monterail
